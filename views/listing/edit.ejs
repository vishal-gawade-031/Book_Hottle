<%- layout("/layouts/boilerplate.ejs") %>
    
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h1>Add new details to Edit Listing</h1>
    <!-- convert the post request into put with install the method override package -->
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">

        <!-- display the information from DB -->
          
        <div class="mb-3">
            <label for="title"class="from-lable">Title</label>
        <input type="text" name="listing[title]" value="<%= listing.title %>"class="form-control">
        </div>

        
        <div class="mb-3">
            <label for="description"class="from-lable ">description</label>
        <textarea type="text" name="listing[description]" class="form-control"><%= listing.description %> </textarea>
        </div>
        <div class="mb-3">
            <label for="image"class="from-lable">image</label>
        <input  name="listing[image]" value="<%=listing.image %>"class="form-control">
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price"class="from-lable">price</label>
        <input type="number" name="listing[price]" value="<%= listing.price %>"class="form-control">
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="country"class="from-lable">country</label>
        <input type="text" name="listing[country]" value="<%= listing.country %>"class="form-control">
        </div>
        </div>
        <div class="mb-3">
            <label for="location"class="from-lable">location</label>
        <input type="text" name="listing[location]"
         value="<%= listing.location %>"
        class="form-control">
        </div>

        <button class="btn btn-dark edit-btn mt-3 mb-3">Edit</button>
    </form>
</div>  
</div>
</body>
